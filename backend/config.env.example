# GerontoVoice Backend Configuration

# Database Configuration
DATABASE_PATH=geronto_voice.db

# Ollama Configuration
OLLAMA_MODEL=mistral
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=30

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True
LOG_LEVEL=INFO

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:5173

# AI Configuration
AI_TEMPERATURE=0.7
AI_TOP_P=0.9
AI_MAX_TOKENS=150

# Skill Analysis Configuration
SKILL_ANALYSIS_CONFIDENCE_THRESHOLD=0.7
SKILL_ANALYSIS_MODEL_PATH=./models/

# Rasa Configuration
RASA_PROJECT_PATH=./rasa_project
RASA_MODEL_PATH=./rasa_project/models/

# Security Configuration
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging Configuration
LOG_FILE=./logs/geronto_voice.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5
